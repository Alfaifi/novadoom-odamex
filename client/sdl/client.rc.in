// This file is encoded as Windows 1252 to ensure the copyright symbol appears

#include <winuser.h>

#define VFT_APP 0x00000001L
#define VOS_NT  0x00040000L
#define VS_FF_DEBUG 0x00000001L

#define NOVADOOM_DESC "NovaDoom Client"
#define NOVADOOM_EXE "novadoom.exe"
#define NOVADOOM_INTERNAL "novadoom"
#define NOVADOOM_NAME "NovaDoom Client"

1 ICON "@CMAKE_SOURCE_DIR@/client/sdl/novadoom.ico"
2 ICON "@CMAKE_SOURCE_DIR@/client/sdl/odademo.ico"

CREATEPROCESS_MANIFEST_RESOURCE_ID RT_MANIFEST "@CMAKE_SOURCE_DIR@/client/sdl/manifest.xml"

1 VERSIONINFO
FILEVERSION @PROJECT_RC_VERSION@
PRODUCTVERSION @PROJECT_RC_VERSION@
FILEFLAGSMASK 0
#ifdef _DEBUG
FILEFLAGS VS_FF_DEBUG
#else
FILEFLAGS 0
#endif
FILEOS VOS_NT
FILETYPE VFT_APP
FILESUBTYPE 0
{
  BLOCK "StringFileInfo"
  {
    // US English, Windows MultiLingual characterset
    BLOCK "040904E4"
    {
      VALUE "CompanyName", "@PROJECT_COMPANY@"
      VALUE "FileDescription", NOVADOOM_DESC
      VALUE "FileVersion", "@PROJECT_VERSION@"
      VALUE "InternalName", NOVADOOM_INTERNAL
      VALUE "LegalCopyright", "NOVADOOM and its likeness are Copyright Â© @PROJECT_COPYRIGHT@ by @PROJECT_COMPANY@."
      VALUE "OriginalFilename", NOVADOOM_EXE
      VALUE "ProductName", NOVADOOM_NAME
      VALUE "ProductVersion", "@PROJECT_VERSION@"
    }
  }
  BLOCK "VarFileInfo"
  {
    // U.S. English, Multilingual
    VALUE "Translation", 0x0409, 1252
  }
}
